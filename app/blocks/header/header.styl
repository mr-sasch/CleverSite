/* header */
header
	background-position center
	border-bottom 1px solid
	background-size cover
	background-image url('../../images/header-bg.png')
	color #fff
	padding-bottom 240px
	position relative

	/* Меню */
.main-menu
	text-transform uppercase
	font-size 18px
	font-weight 500

.nav-item
	color #fff !important
	text-transform uppercase
	transition .2s ease
.nav-item:hover
	text-decoration none
	color red !important

.cat-menu
	width 100%
	font-size 14px
.nav-dot
	width 3px
	height 3px
	border 1px solid
	border-radius 50%
.navbar-nav-main_m-r
	margin-right -.5rem

.separ-nav
	height 1px
	background-color #ffffffad

.navbar-light .navbar-toggler
	border-color rgba(255, 255, 255, 0.8)
.navbar-light .navbar-toggler:focus
	outline none

	/* Выпадающее меню */
.dropdown-menu
	background-color #0000008c
	border-left 1px solid red
.dropdown-item
	color #fff
	font-size 14px
	padding-top 7px
	padding-bottom 7px
	transition .2s ease
	position relative

.dropdown-item.dropdown-item_sub
	padding 0

.dropdown-submenu-item
	position absolute
	border-left 1px solid red
	background-color #0000008c
	left calc(100% - 0px)
	top 0
	display none

.dropdown-submenu-show
	background-color #fff
	color #000

.dropdown-item:active
	background-color lightgrey
	color #000

.dropdown-submenu-parent
	position relative
	padding-right 15px
.dropdown-submenu-parent:before
	position absolute
	content ''
	top 50%
	transform translateY(-50%)
	right 8px
	height 4px
	width 4px
	border-radius 50%
	background-color red

.dropdown-submenu-parent:hover > .dropdown-submenu-item
	display inline-block
.dropdown-submenu-parent:hover > .dropdown-item_sub
	color #000

.dropdown-submenu-item:hover,
.dropdown-submenu-item:focus
	display inline-block

.dropdown-menu
	display none
	top calc(100% - 2px)

.nav-item:hover ~ .dropdown-menu
	display inline-block
.dropdown-menu:hover
	display inline-block

.nav-item
	padding 7px 0
	/* /Выпадающее меню */


	/* /Меню */

	/* УТП */
.hder__utp-center
	display inline-block
	font-weight 300
.hder__utp-left
	font-size 30px
	text-align left
	line-height 40px
	border-left 3px solid red
	padding 0 0 5px 15px

.hder__utp-right
