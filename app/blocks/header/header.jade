	script.
		var activeMenu = () => {
			var currentUrl = window.location.pathname,
			menuA = document.querySelectorAll('#mainMenu a'),
			menuAlength = menuA.length;
			for (var i=0; i<menuAlength; i++) {
				var menuAhref = menuA[i].getAttribute('href');
				if (currentUrl === menuAhref) {
					menuA[i].classList.add('active');
					break;
					}
				}
