				.sepr-hr.brd-g
				.sepr
			.container
				h2.text-center Наша команда (3 человека)
				.sepr
				.row.flex-row
					.col-4
						.team-prsn.bg-lg.brd-w
							.team-prsn__photo.bg-g
							.team-prsn__about.px-3
								.team-prsn__title.pt-4 Сергей Иванов
								.team-prsn__text.pb-4 заместитель директора
					.col-4
						.team-prsn.bg-lg.brd-w
							.team-prsn__photo.bg-g
							.team-prsn__about.px-3
								.team-prsn__title.pt-4 Иван Сергеев
								.team-prsn__text.pb-4 инженер-наладчик
					.col-4
						.team-prsn.bg-lg.brd-w
							.team-prsn__photo.bg-g
							.team-prsn__about.px-3
								.team-prsn__title.pt-4 Сергей Иванов
