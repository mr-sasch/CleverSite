mixin slider()
	+b.slider&attributes(attributes)
		block
		.container-fluid.block-slider.bg-g
			#mainSlider.carousel.slide(data-ride='carousel')
				// Буллеты
				//- ol.carousel-indicators
				//- 	li.active(data-target='#mainSlider' data-slide-to='0')
				//- 	li(data-target='#mainSlider' data-slide-to='1')
				//- 	li(data-target='#mainSlider' data-slide-to='2')
				// Слайды
				.carousel-inner
					.carousel-item.active
						.slider__item(style='width: 100%;')
							// Ряд 1
							.container.p-3
								.col-12
									.row.justify-content-between.align-items-start
										.col-3.bg-lg.c-b.p-3.font-bold Мир умной автоматики для вашего дома
										.header-call.col-3.bg-lg.c-b.p-3
											.header-call__title Позвоните нам прямо сейчас
											h3.header-call__phone +7 (978) 090-41-31
											.header-call__btn.text-right
												button.btn.btn-secondary.p-1(data-toggle='modal' data-target='#callback-banner') Заказать звонок
							// Ряд 2
							.row
								.container-fluid
									.col-12.text-center.bg-lg.py-4.slider-gradient.c-lg
										.row.justify-content-center РЕМОНТ КВАРТИРЫ ЗА 60 ДНЕЙ! ОТ 3900 РУБ/М2
										.sepr-hr.brd-w.my-2
										.row.justify-content-center ОНЛАЙН - ТРАНСЛЯЦИЯ ВАШЕГО РЕМОНТА
										.row.justify-content-center.font-bold.mt-1 ПРОПИСЫВАЕМ ГАРАНТИЮ В ДОГОВОРЕ НА 5 ЛЕТ!
							// Ряд 3
							.row.flex-column.align-items-center
								.col-12.text-center.my-5.banner__bottom
									.banner__bottom1.p-3.bg-w
										.banner__bottom-row1
											h1 Сэкономим до 30% на работах
										.banner__bottom-row2
											h4 Сравните цены с конкурентами сделав экспресс-рассчет
									.banner__bottom2.py-4.bg-lg ВАМ БУДЕТ ДОСТАТОЧНО 2 МИН ЧТОБЫ ОПРЕДЕЛИТЬ ПРИМЕРНУЮ
										br
										| СТОИМОСТЬ ВАШЕГО РЕМОНТА И ДЛЯ ЭТОГО ДАЖЕ НЕ НУЖНО
										br
										| СОЗВАНИВАТЬСЯ С МЕНЕДЖЕРОМ НАШЕЙ КОМПАНИИ.
									
				
				// Модальное окно
				.modal.fade#callback-banner(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
					.modal-dialog
						.modal-content
							.modal-header
								.modal-title Обратный звонок
								button.close(data-dismiss='modal')
							.modal-body
								form
									.form-group
										label(for='#callbackBannerName').col-form-label Ваше имя
										input(type='text').form-control#callbackBannerName
									.form-group
										label(for='№callbackBannerSirname').col-form-label Ваше имя
										input(type='text').form-control#callbackBannerSirname
							.modal-footer
								button.btn.btn-secondary Отправить заявку				
				// Стрелки
				//- a.carousel-control-prev(href='#mainSlider' data-slide='prev')
				//- 	span.carousel-control-prev-icon
				//- a.carousel-control-next(href='#mainSlider' data-slide='next')
				//- 	span.carousel-control-next-icon
		.sepr
