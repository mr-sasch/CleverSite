      mixin we-set__cntnt(ttl, lr, ...lbls)
        // Описание
        .col-12.col-lg-6.mb-4.mb-lg-0.p-0.d-flex.align-items-center(class= lr)
          .we-set__cntnt
            .we-set__cntnt-ttl= ttl
            .we-set__cntnt-lbl
              each lbl in lbls
                .we-set__cntnt-lbl-item
                  img.we-set__cntnt-lbl-item-img(src= lbl)
      +we-set__imgs('images/smart-we-set__imgs-img1.png')
