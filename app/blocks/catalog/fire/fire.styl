/* Пожарная безопасность */
.fire__why
  position relative
  top -210px

.fire__why-bg
  position absolute
  width 100%
  top -160px
  left 0
  bottom -60px
  transform skewY(-7deg)
  overflow hidden
.fire__why-bg:before
  content ''
  position absolute
  top -160px
  left 0
  bottom -160px
  width 100%
  transform skewY(7deg)
  background-color $greyBg

  /* Заголовок */
.header-fire
  .pod-klyuch
    font-size 18px
.header-video.header-fire
  background-image url(../../images/cat-fire___bg.png)
  /* /Заголовок */

  /* Преимущества */
.fire__benefits
  position relative
  top -320px
  padding-top 300px
  padding-bottom 50px
  .test-utp
    top 30px
    margin-bottom 300px
    position relative
    z-index 10

.fire__benefits-bg
  position absolute
  top 160px
  bottom 0
  left 0
  width 100%
  transform skewY(-7deg)
  overflow hidden
  z-index 10
.fire__benefits-bg:before
  content ''
  position absolute
  top -160px
  left 0
  width 100%
  bottom -160px
  background-position center
  background-size cover
  background-repeat no-repeat
  background-image url("../../images/main-about__bg.png")
  transform skewY(7deg)

.cat-video__utp-top.cat-video__utp-top_fire
  font-size 30px
  color #fff

.cat-video__utp-bottom.cat-video__utp-bottom_fire
  font-size 18px
  color #282828
  line-height 22px

.cat-video__utp-bottom_fire-orange
  color $howOrange
  margin 25px 0 10px
  display inline-block

.fire__benefits-text
  color #fff
  font-size 24px
  line-height 30px
  font-weight 300
  position relative
  z-index 10
  top 0
  margin-top -160px
.fire-very-large
  font-size 48px
  font-weight 600
.fire-yellow
  font-weight 600
  color yellow

.fire__benefits-text-ttl
  font-weight 600
  color yellow
  position relative
  text-transform uppercase
  padding-bottom 7px
  margin-top 100px
  margin-bottom 60px
.fire__benefits-text-ttl:before
  content ''
  position absolute
  bottom 0
  width 100%
  border-bottom 1px solid $howOrange

.fire__benefits-text-img
  float right
  margin-left 15px
  margin-bottom 15px
.fire__benefits-text-ol
  list-style-type decimal
  margin-left 25px

.fire__benefits-text-center
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  flex-wrap wrap

.main-team__ttl-row.main-team__ttl-row_fire
  width 100%
.main-team__ttl-row.main-team__ttl-row_fire:before
  z-index 10

.fire__why-container
  position relative
  z-index 10

.fire__why-p
  font-size 16px
  line-height 22px
  margin-top 30px

.fire__benefits-text-center-img
  margin-bottom 20px

@media screen and (max-width 700px)
  .fire__benefits-text-center-img,
  .fire__benefits-text-img
    width 100%

  /* /Преимущества */

  /* Обратитесь к нам */
.video-cat_fire
  top -150px
  .video-cat__ttl
    line-height 40px
  .video-cat__bg
    height initial
    bottom -70px
  .video-cat__bg:before
    background-image url("../../images/cat-fire___bg2.png")
  /* /Обратитесь к нам */

  /* Остались вопросы? */
.cat-fire
  .video-faq
    margin-top -110px
