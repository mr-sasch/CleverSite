/* Пожарная безопасность */
.fire__why
  position relative
  padding 300px 0

.fire__why-bg
  position absolute
  width 100%
  top 0
  left 0
  bottom 0
  transform skewY(-7deg)
.fire__why-bg:before
  content ''
  position absolute
  top 0
  left 0
  bottom 0
  width 100%
  transform skewY(7deg)
  background-color $greyBg

  /* Заголовок */
.header-fire
  .pod-klyuch
    font-size 18px
.header-video.header-fire
  background-image url(../../images/cat-fire___bg.png)
  /* /Заголовок */

  /* Преимущества */
.fire__benefits
  padding 300px 0
  position relative

.fire__benefits-bg
  position absolute
  top 0
  width 100%
  height 100%
  transform skewY(-7deg)

  z-index -1
.fire__benefits-bg:before
  content ''
  position absolute
  top 0
  left 0
  width 100%
  bottom 0
  background-position center
  background-size cover
  background-repeat no-repeat
  background-image url("../../images/main-about__bg.png")
  transform skewY(7deg)

.cat-video__utp-top.cat-video__utp-top_fire
  font-size 30px
  color #fff

.cat-video__utp-bottom.cat-video__utp-bottom_fire
  font-size 18px
  color #282828
  line-height 22px

.cat-video__utp-bottom_fire-orange
  color $howOrange
  margin 25px 0 10px
  display inline-block

.fire__benefits-text
  color #fff
  font-size 24px
  line-height 30px
  font-weight 300
.fire-very-large
  font-size 48px
  font-weight 600
.fire-yellow
  font-weight 600
  color yellow

.fire__benefits-text-ttl
  font-weight 600
  color yellow
  position relative
  text-transform uppercase
  padding-bottom 7px
  margin-top 100px
  margin-bottom 60px
.fire__benefits-text-ttl:before
  content ''
  position absolute
  bottom 0
  width 100%
  border-bottom 1px solid $howOrange

.fire__benefits-text-img
  float right
  margin-left 15px
  margin-bottom 15px
.fire__benefits-text-ol
  list-style-type decimal
  margin-left 25px

.fire__benefits-text-center
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row
  justify-content space-between
  align-items center

.main-team__ttl-row.main-team__ttl-row_fire
  width 100%
.main-team__ttl-row.main-team__ttl-row_fire:before
  z-index 10

.fire__why-container
  position relative
  z-index 10

.fire__why-p
  font-size 16px
  line-height 22px
  margin-top 30px

