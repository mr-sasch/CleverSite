/* Видеонаблюдение */
.cat-video
  padding 300px 0
  /* УТП */
  .test-utp
    position relative
    top -200px
  .cat-video__utp-top
    font-size 30px
    color #fff

  .cat-video__utp-bottom
    font-size 18px
    line-height 24px
    p:last-child
      margin-bottom 0
  /* Заголовок с чертами по бокам */
  .main-reviews__ttl
    color $fterBlue
  .main-reviews__ttl-separ:before
    background-color $howOrange
  .main-reviews__ttl-separ:after
    background-color $howOrange

  /* Вы получаете */
.you-get__item-text-ttl
  font-size 18px
  font-weight 600
  text-transform uppercase
  margin-bottom 2px

.you-get__item-text-body
  font-size 18px
  font-weight 300

.you-get__item-img
  float left
  width 65px
  margin-right 30px
  text-align center

.you-get__item:after
  display table
  width 100%
  content ''

.you-get__item-text
  padding-top 18px

.you-get__item
  margin-bottom 30px

.you-get__button
  color #fff
  text-transform uppercase
  background-color $hderBlue
  max-width 190px
  width 100%
  text-align center
  padding 10px 15px
  border-radius 10px
  border none
  box-shadow 0 3px 36px -1px #808080c4

.you-get__button-row
  margin-top 30px
  /* /Вы получаете */

  /* Мы установим */
.we-set
  position relative
  padding 50px 0
  margin 50px 0
  .slick-dotted.slick-slider
    margin-bottom 0

.we-set__bg
  position absolute
  top 0
  left 0
  height 100%
  width 100%
.we-set__bg:before
  content ''
  background-image url("../../images/main-about__bg.png")
  background-position center
  background-size cover
  background-repeat no-repeat
  position absolute
  top 0
  left 0
  height 100%
  width 100%

.we-set__imgs-img
  background-image url('../../images/we-set__imgs.png')
  background-position center
  background-size cover
  height 310px

.we-set__ttl
  font-size 48px
  font-weight 600
  color #fff
  margin-bottom 60px

.we-set__cntnt-ttl
  position relative
  font-size 24px
  font-weight 600
  color yellow
  text-transform uppercase
  padding-bottom 10px
  display inline-block
  padding-left 10px
  padding-right 10px
.we-set__cntnt-ttl:before
  content ''
  position absolute
  height 2px
  background-color $howOrange
  width 100%
  bottom 0
  left 0

.we-set__cntnt-ttl-right
  justify-content flex-start
  .we-set__cntnt-ttl
    padding-left 35px

.we-set__cntnt-ttl-left
  justify-content flex-end
  .we-set__cntnt-ttl
    padding-right 35px

.we-set__cntnt-descr-ul
  margin-top 20px
  color #fff
  font-weight 300

.we-set__cntnt-descr-li
  margin 9px 0
  padding-left 35px

.we-set__cntnt
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column

.we-set__imgs
  .slick-dots
    bottom inherit
    top 15px
    text-align right
    padding-right 30px
  .slick-dots li button:before
    content none
  .slick-dots li button
    border 1px solid $howOrange
    border-radius 50%
    background-color #fff
    height 17px
    width 17px
    transition .2s ease
  .slick-dots li button:hover,
  .slick-dots li.slick-active button
    background-color $howOrange
@media screen and (max-width 400px)
  .cat-video
    .main-reviews__ttl
      padding 0 10px
  /* /Мы установим */

// Полную информацию смотрите в каталоге
.video-cat
  position relative
  padding 100px 0
.video-cat__bg
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  background-image url(../../images/video-cat__bg.png)
  background-size cover
  background-position center
  background-repeat no-repeat

.video-cat
  .main-form__form-inpt-left
    width initial
  .main-form__form-inpt input
    border-bottom-color yellow
    background-color transparent
    color #fff
  .main-form__form-inpt label
    color #fff
    font-weight 300

.video-cat__ttl
  font-size 30px
  color #fff
  text-align center
  margin-bottom 40px

.video-cat__notice
  font-weight 300
  color #fff
  font-size 14px
  margin 25px 0 35px
  .main-form__form-txt-txt-star
    font-size 14px
    color $howOrange

.video-cat__notice-politics
  text-decoration underline
  cursor pointer

.video-cat__btn
  background-color red
  border none
  border-radius 10px
  color #fff
  width 100%
  max-width 360px
  padding 12px 0
