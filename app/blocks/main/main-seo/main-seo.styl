/* Сео текст */
.main-seo
	display block
	z-index 15
	position relative
	padding 120px 0 70px
	margin-top -10px

.main-seo__bg
	background-color $greyBg
	transform skewY(-7deg)
	position absolute
	top 0
	bottom 0
	width 100%

.main-seo__ttl
	font-size 48px
	color $hderBlue
	font-weight 600
	text-align center
	margin-bottom 40px
	position relative

.main-seo__text-wrap
	position relative
	height 250px
	overflow hidden
	transition .3s ease

.main-seo__text
	position absolute
	width 100%
	top 0
	left 0
	font-size 16px
	color #333
	line-height 30px

.main-seo__text-grad
	position absolute
	height 100px
	width 100%
	left 0
	bottom 0
	background linear-gradient(to bottom, rgba(#ededed, 0), #ededed)
	transition .3s ease
.main-seo__wrap.active
	.main-seo__text-grad
		height 1px


.main-seo__more
	position relative
	margin-top 30px
	font-size 16px
	color $howOrange
	cursor pointer
.main-seo__more-show:hover,
.main-seo__more-hide:hover
	text-decoration underline

.main-seo__more-show
	opacity 1
	transition .2s ease
.main-seo__more-hide
	position absolute
	left 0
	bottom 0
	opacity 0
	transition .2s ease

.main-seo__wrap.active
	.main-seo__more
		.main-seo__more-show
			opacity 0
		.main-seo__more-hide
			opacity 1

@media screen and (max-width 800px)
	.main-seo__ttl
		font-size 30px
/* /Сео текст */
