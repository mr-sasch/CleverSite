mixin main-gallery()
	+b.main-gallery&attributes(attributes)
		block
		.main-gallery__bg
		.container.main-gallery__wrap
			.main-gallery__ttl Фотогалерея
		mixin mainGalleryOnly()
			.main-gallery__items#main-gallery__items
				each val in ['images/gallery/2.jpg', 'images/gallery/3.jpg', 'images/gallery/4.jpg', 'images/gallery/5.jpg', 'images/gallery/11.jpg', 'images/gallery/izobrajenie-007.jpg', 'images/gallery/izobrajenie-025.jpg', 'images/gallery/izobrajenie-033.jpg', 'images/gallery/izobrajenie-036.jpg', 'images/gallery/izobrajenie-039.jpg', 'images/gallery/izobrajenie-040.jpg', 'images/gallery/izobrajenie-044.jpg', 'images/gallery/izobrajenie-046.jpg', 'images/gallery/izobrajenie-049.jpg', 'images/gallery/izobrajenie-051.jpg', 'images/gallery/izobrajenie-054.jpg', 'images/gallery/izobrajenie-059.jpg', 'images/gallery/izobrajenie-061.jpg']
					.main-gallery__item-wrap
						a.main-gallery__item-wrap-a(data-fancybox="gallery" href= val)
							.main-gallery__item-zoom
							.main-gallery__item-wrap-bg
							img.main-gallery__item(style='background-image: url('+ val +')')
		+mainGalleryOnly()
		// Стрелки
		mixin mainGalleryArrows()
			.container.main-gallery__arrows-wrap
				.main-gallery__arrows
					.main-gallery__arrows-arrow.main-gallery__arrows-arrow-left
					.main-gallery__arrows-center
						.main-gallery__arrows-center-current
						.main-gallery__arrows-center-txt из
						.main-gallery__arrows-center-all
					.main-gallery__arrows-arrow.main-gallery__arrows-arrow-right
		+mainGalleryArrows()
		// /Стрелки
