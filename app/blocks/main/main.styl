.main
	display block

// Навбар
.navbar
	border 1px solid

// Слайдер
.block-slider
	margin-top 50px
.slider__img
	display inline-block

.carousel-indicators
	li
		cursor pointer
.slider-gradient
	// background linear-gradient(to right, lightgrey, rgb(69, 69, 69), lightgrey)
	background: linear-gradient(to right, rgba(69, 69, 69, 0) 0%, rgb(69, 69, 69, 0.8) 14%, rgba(69, 69, 69, 0.8) 86%, rgba(69, 69, 69, 0) 100%);

// Каталог
.cat-item
	height 100px
	border 1px solid
	display flex
	justify-content center
	align-items center

.cat__sub-item
	height 100%
	border 1px solid
	display flex
	justify-content center
	align-items center

// Мечта
.block-dream
	display flex
	justify-content center
	align-items center
	text-align center

// Чат
.chat
	width 200px
	margin 0 0 20px 20px
	display flex
	justify-content center
	align-items center

.phone
	display flex
	justify-content center
	align-items center
	margin 0 20px 20px 0
	height 100px
	width 100px
	border-radius 50%
