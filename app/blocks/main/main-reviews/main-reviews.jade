mixin main-reviews()
	+b.main-reviews&attributes(attributes)
		block
		.main-reviews__bg
		.container.main-reviews__ttl-container
			.main-reviews__ttl-wrap
				.main-reviews__ttl-separ.main-reviews__ttl-left
				.main-reviews__ttl Отзывы
				.main-reviews__ttl-separ.main-reviews__ttl-right
		// Галерея
		.container.main-reviews__items-container
			.main-reviews__items
				mixin reviewItem()
					.main-reviews__item
						.main-reviews__item-wrap
							.main-reviews__item-head
								.main-reviews__item-head-ttl Система видеонаблюдения Jablotron
								img.main-reviews__item-head-img(src='images/main-reviews__ttl.png')
							.main-reviews__item-body
								.main-reviews__item-body-txt Заказывали систему умного дома. Порадовало соотношение цены и качества. Очень вежливые ребята, подробно ответили.
							.main-reviews__item-footer
								.main-reviews__item-footer-left
									img.main-reviews__item-footer-left(src='images/main-reviews__person.png')
								.main-reviews__item-footer-right
									.main-reviews__item-footer-right-ttl Сергей Петров
									.main-reviews__item-footer-right-cntnt г. Севастополь
										br
										span(style='font-size: 12px;') 18.06.2018
				mixin reviewItemTxtVid()
					.main-reviews__item
						.main-reviews__item-wrap
							.main-reviews__item-head
								.main-reviews__item-head-ttl Система видеонаблюдения Jablotron
								img.main-reviews__item-head-img(src='images/main-reviews__ttl.png')
							.main-reviews__item-body
								// Текст
								.main-reviews__item-body-txt Заказывали систему умного дома. Порадовало соотношение цены и качества. Очень вежливые ребята, подробно ответили.
								// Видео
								.main-reviews__item-body-video
									a(data-fancybox="gallery" href='https://youtu.be/azUbCdcAeFM')
										.main-gallery__item-zoom
										img.main-gallery__item.main-gallery__item_reviews(src='images/main-gallery__video.png')
							.main-reviews__item-footer
								.main-reviews__item-footer-left
									img.main-reviews__item-footer-left(src='images/main-reviews__person.png')
								.main-reviews__item-footer-right
									.main-reviews__item-footer-right-ttl Сергей Петров
									.main-reviews__item-footer-right-cntnt г. Севастополь
										br
										span(style='font-size: 12px;') 18.06.2018
				mixin reviewItemVid()
					.main-reviews__item
						.main-reviews__item-wrap
							.main-reviews__item-head
								.main-reviews__item-head-ttl Система видеонаблюдения Jablotron
								img.main-reviews__item-head-img(src='images/main-reviews__ttl.png')
							.main-reviews__item-body
								// Видео
								.main-reviews__item-body-video
									a(data-fancybox="gallery" href='https://youtu.be/azUbCdcAeFM')
										.main-gallery__item-zoom
										img.main-gallery__item.main-gallery__item_reviews(src='images/main-gallery__video.png')
							.main-reviews__item-footer
								.main-reviews__item-footer-left
									img.main-reviews__item-footer-left(src='images/main-reviews__person.png')
								.main-reviews__item-footer-right
									.main-reviews__item-footer-right-ttl Сергей Петров
									.main-reviews__item-footer-right-cntnt г. Севастополь
										br
										span(style='font-size: 12px;') 18.06.2018
				+reviewItemTxtVid()
				+reviewItem()
				+reviewItemVid()
				+reviewItem()
				+reviewItem()
				+reviewItem()
				+reviewItem()
				+reviewItem()
				+reviewItem()
				+reviewItem()
		// Стрелки
		.container.main-gallery__arrows-wrap.main-gallery__arrows-wrap_reviews
			.main-gallery__arrows
				.main-gallery__arrows-arrow.main-gallery__arrows-arrow-left
				.main-gallery__arrows-center
					.main-gallery__arrows-center-current
					.main-gallery__arrows-center-txt из
					.main-gallery__arrows-center-all
				.main-gallery__arrows-arrow.main-gallery__arrows-arrow-right
		// Стрелки
