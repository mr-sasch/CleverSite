/* Главная. Обрадение директора */
.main-director
	display block
	position relative
	z-index 10
	padding-top 100px

.main-director__wrap
	position relative

.main-director__bg
	position absolute
	height 100%
	width 100%
	top 0
	left 0
	transform skewY(-7deg)
	overflow hidden
.main-director__bg:before
	content ''
	position absolute
	width 100%
	top -200px
	bottom -200px
	left 0
	transform skewY(7deg)
	background-image url(../../images/main-director__bg.png)
	background-size cover
	background-position center

.main-director__ttl-wrap
	position relative
	z-index 10

.main-director__ttl
	color #fff
	font-size 60px
	margin-bottom 50px

.main-director__txt
	padding 0 65px
	line-height 24px
	font-size 16px
	background-color #fff
	box-shadow 0 0 20px 10px #00000047

.main-director__txt-img
	float right
	padding 0 0 10px 10px

.main-director__txt-welcome
	font-size 24px
	color $hderBlue
	text-align right
	margin-top 40px

.main-director__txt-ul
	li
		padding 1px 0 1px 27px
		position relative
	i
		position absolute
		left 0
		top 50%
		transform translateY(-50%)
		color #00a30c

.main-director__txt-header
	position relative
	text-align center
.main-director__txt-footer
	text-align center
	transform rotate(180deg)

.main-director__txt-header-lines
	padding 50px 0
.main-director__txt-header-lines:before
	content ''
	position absolute
	width 100%
	height 3px
	top 50%
	transform translateY(-50%)
	left 0
	background-color #fee300

.main-director__txt-footer-img-wrap
	position relative
	padding 0 40px
	display inline-block
	background-color #fff

@media screen and (max-width 768px)
	.main-director__ttl
		font-size 40px
	.main-director__txt
		padding 0 10px
/* /Главная. Обрадение директора */
