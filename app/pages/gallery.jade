extends /blocks/layout-default/layout-default
include /blocks/modals/modals
include /blocks/main/main-form/main-form


block head
	- var pageTitle = 'Clever | Мир умной автоматики для вашего дома';
	- var title = 'Галерея';

block content
	// Шапка
	include /blocks/simple-pages/simple-header
	// /Шапка
	.container.simple-p
		// Заголовок
		.simple-p__ttle-wrap
			.simple-p__ttle= title
		.row.gallery__items
			mixin galleryItem()
				.col-6
					a(href='#').gallery__item
						.gallery__item-bg
						.gallery__item-ttl Проект Умный дом
			+galleryItem()
			+galleryItem()
			+galleryItem()
			+galleryItem()
			+galleryItem()
			+galleryItem()
		.row
			.col.gallery__pagntn
				a(href='#').gallery__pagntn-item.gallery__pagntn-arrow.gallery__pagntn-arrow-left
				a(href='#').gallery__pagntn-item.gallery__pagntn-page.active 1
				a(href='#').gallery__pagntn-item.gallery__pagntn-page 2
				a(href='#').gallery__pagntn-item.gallery__pagntn-page 3
				a(href='#').gallery__pagntn-item.gallery__pagntn-arrow.gallery__pagntn-arrow-right
				
	// Оставьте заявку	
	+main-form('main-form_gallery')
	// /Оставьте заявку
	// Модальные окна
	+modals()
	// /Модальные окна
	// Футер
	include ../blocks/footer/footer
	// /Футер
